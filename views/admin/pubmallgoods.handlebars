    <section class="panel panel-default">
        <div class="panel-heading"><strong><span class="fa fa-th"></span> 商品上架发布中心</strong></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-8 col-md-offset-0">

                    <form class="form-horizontal" method="post" action="/adminputitem.html">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">商品类型：</label>
                            <div class="col-sm-5">
                                <select class="form-control" name="itemType">
                                    <option value="1">数码影音</option>
                                    <option value="2">手机电脑</option>
                                    <option value="3">母婴商品</option>
                                    <option value="4">美妆商品</option>
                                    <option value="5">轻奢物品</option>
                                    <option value="6">水果保健食品</option>
                                    <option value="7">黄金珠宝</option>
                                    <option value="8">生活用品</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">商品编码：</label>
                            <div class="col-sm-5">
                                <input type="text" name="itemCode" class="form-control"  placeholder="商品编码">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">商品名称：</label>
                            <div class="col-sm-5">
                                <input name="itemName" type="text" class="form-control"  placeholder="商品名称">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">市场价格：</label>
                            <div class="col-sm-5">
                                <input type="text" name="itemPrice" class="form-control" placeholder="市场价格">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">总需价格：</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="itemPricec" placeholder="总需价格">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">单次价格：</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="itemPriced" placeholder="单次价格">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">上架数量：</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="itemNumber" placeholder="上架数量">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">文字说明：</label>
                            <div class="col-sm-5">
                                <textarea type="text" class="form-control" name="itemText" placeholder="文字说明"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">商品文描：</label>
                            <div class="col-sm-5">
                                <p><input type="text" class="form-control" name="itemPic1" placeholder="pc图片地址"></p>
                                <p><input type="text" class="form-control" name="itemPic2" placeholder="pc图片地址"></p>
                                <p><input type="text" class="form-control" name="itemPic3" placeholder="pc图片地址"></p>
                                <p><input type="text" class="form-control" name="itemPic4" placeholder="pc图片地址"></p>
                            </div>
                            <div class="col-sm-5">
                                <p><input type="text" class="form-control" name="appitemPic1" placeholder="app图片地址"></p>
                                <p><input type="text" class="form-control" name="appitemPic2" placeholder="app图片地址"></p>
                                <p><input type="text" class="form-control" name="appitemPic3" placeholder="app图片地址"></p>
                                <p><input type="text" class="form-control" name="appitemPic4" placeholder="app图片地址"></p>
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">商品图片：</label>
                            <div class="col-sm-5">
                                <p><input type="text" class="form-control" name="itemImage1" placeholder="pc图片地址"></p>
                                <p><input type="text" class="form-control" name="itemImage2" placeholder="pc图片地址"></p>
                                <p><input type="text" class="form-control" name="itemImage3" placeholder="pc图片地址"></p>
                                <p><input type="text" class="form-control" name="itemImage4" placeholder="pc图片地址"></p>
                            </div>
                            <div class="col-sm-5">
