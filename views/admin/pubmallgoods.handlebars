                                <p><input type="text" class="form-control" name="appitemImage3" placeholder="app图片地址"></p>
                                <p><input type="text" class="form-control" name="appitemImage4" placeholder="app图片地址"></p>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success btn-w-md">提 交</button>
                                <p>{{message}}</p>
                            </div>
                        </div>
                    </form>  

                </div>
            </div>
