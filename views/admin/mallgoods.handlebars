<script src="{{static '/admin/scripts/jquery.page.js'}}"></script>
<script>
    $(function(){
        var number = ~~{{pageCount}};
        var pp = window.location.href.split('page=')[1];
        var np = number - pp
        for (var i = 0; i < $('.itemid').length;i+=1){
            $('.itemid').eq(i).html(i+1);
        }  

        $(".tcdPageCode").createPage({
            pageCount: Math.ceil({{pageCount}} / 10),
            current: {{pageNow}},
            backFn:function(p){
                var url = window.location.href.split('page')[0]+'page='+p;
                window.location.href=url;
            }
        });
    })

</script>
