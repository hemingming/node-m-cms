                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>商品类型</th>
                            <th>商品编号</th>
                            <th>商品名称</th>
                            <th>商品图片</th>
                            <th>市场价格</th>
                            <th>总需价格</th>
                            <th>单次价格</th>
                            <th>上架数量</th>
                            <th>商品状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each datas}}
                        <tr>
                            <td class="itemid"></td>
                            <td>{{itemtype}}</td>
                            <td>{{itemcode}}</td>
                            <td>{{itemname}}</td>
                            <td><img src="{{itemimage.[0]}}" class="user-product" alt="admin" width="50" height="50"></td>
                            <td>&yen; {{itemprice}}.00</td>
                            <td>&yen; {{itemtoal}}.00</td>
                            <td>&yen; {{itemunit}}.00 /人次</td>
                            <td>{{itemnumber}}</td>
                            <td><script>var state = {{itemstate}};(state == 1)?document.writeln('上架'):document.writeln('下架');</script></td>
                            <td>
                                <button type="button" class="btn btn-default btn-sm">删除</button>
                                <button type="button" class="btn btn-danger btn-sm">下架</button>
                            </td>
                        </tr>
                    {{/each}}
